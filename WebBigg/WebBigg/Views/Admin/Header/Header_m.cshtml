@{
    ViewBag.Title = "Tiêu đề shop";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content" style="min-height: 530px;">
    <h3>Tùy chỉnh header website</h3>
    <div class="bs-example bs-example-bg-classes">
        @if (ViewData["Error"] != null)
            {
            <p class="bg-warning">@ViewData["Error"]</p>
        }
    </div>
    <div class="block">
        <div class="block-content">
            <form method="post" name="frmForm" enctype="multipart/form-data" class="form-horizontal">

                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Logo
                    </label>
                    <div class="col-sm-6">
                        <div class="file-input file-input-new">
                            <div class="btn btn-primary btn-file btn-image-">
                                <i class="glyphicon glyphicon-folder-open">
                                    Browse ...
                                </i>
                                <input name="fileUpload" type="file" class="" id="txtImage" onchange="readURL(this);" style="width: 100%; height: 100%;" /><br />
                            </div>
                            <input type="checkbox" name="chkClearImg" value="on" /> Xóa bỏ hình ảnh
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">
                       Favicon
                    </label>
                    <div class="col-sm-6">
                        <div class="file-input file-input-new">
                            <div class="btn btn-primary btn-file btn-image-">
                                <i class="glyphicon glyphicon-folder-open">
                                    Browse ...
                                </i>
                                <input name="fileUpload" type="file" class="" id="txtImage" onchange="readURL(this);" style="width: 100%; height: 100%;" /><br />
                            </div>
                            <input type="checkbox" name="chkClearImg" value="on" /> Xóa bỏ hình ảnh
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Contact
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="phone" class="form-control" value="0122536899" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Email
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="email" class="form-control" value="lkimlyen2912@gmail.com" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Tiêu đề 1
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="tieude1" class="form-control" value="@Model.TieuDe1" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Mô tả 1
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="mota1" class="form-control" value="@Model.MoTa1" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Tiêu đề 2
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="tieude2" class="form-control" value="@Model.TieuDe2" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Mô tả 2
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="mota2" class="form-control" value="@Model.MoTa2" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Tiêu đề 3
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="tieude3" class="form-control" value="@Model.TieuDe3" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Mô tả 3
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="mota3" class="form-control" value="@Model.MoTa3" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Tiêu đề 4
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="tieude4" class="form-control" value="@Model.TieuDe4" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Mô tả 4
                    </label>
                    <div class="col-sm-6">
                        <input type="text" name="mota4" class="form-control" value="@Model.MoTa4" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-4 btn-gr">
                        <button type="submit" name="btnSave" class="btn btn-default">Chấp nhận</button>
                        <button onclick="goBack()" type="button" name="goback" class="btn btn-default">Quay lại</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>